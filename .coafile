[Format]
bears = LineCountBear,LineLengthBear,SpaceConsistencyBear
files = **/*.py
max_line_length = 80
max_lines_per_file = 1030
use_spaces = True
 
[Python]
bears = PEP8Bear,PyDocStyleBear,PyFlakesBear,PyLintBear
files = **/*.py
ignore = test.py
pydocstyle_ignore = D100, D101, D102, D103, D104, D105, D203, D213
pylint_disable = C0111
 
[PythonWithoutTest]
bears = VultureBear
ignore = test/*
files = main.py
language = python
